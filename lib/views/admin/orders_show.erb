                            <tr class="table-active">
                                <th colspan="3" class="text-end">Total:</th>
                                <th class="text-end">
                                    <%= format_currency(@order.amount, @order.currency) %>
                                </th>
                            </tr>
                        </tfoot>
                    </table>
