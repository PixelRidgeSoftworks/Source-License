<!-- Hero Section -->
<section class="hero-section">
    <div class="hero-content">
        <div class="container">
            <div class="row align-items-center min-vh-70">
                <div class="col-lg-6">
                    <div class="hero-text">
                        <h1 class="display-3 fw-bold mb-4">
                            <%= custom('hero_section.title', 'Transform Your Business with Our Solutions') %>
                        </h1>
                        <p class="lead mb-4 text-secondary fs-4">
                            <%= custom('hero_section.subtitle',
                            'Powerful, reliable, and easy-to-use solutions designed to help your business grow. From startups to enterprises, we provide the tools you need to succeed.') %>
                        </p>

                        <!-- CTA Buttons -->
                        <div class="d-flex gap-3 mb-5 flex-wrap">
                            <a href="<%= custom('hero_section.cta_primary_link', '/products') %>" class="btn btn-primary btn-lg px-4 py-3">
                                <i class="<%= custom('hero_section.cta_primary_icon', 'fas fa-rocket') %> me-2"></i>
                                <%= custom('hero_section.cta_primary_text', 'Get Started') %>
                            </a>
                            <% if user_logged_in? %>
                                <a href="/dashboard" class="btn btn-outline-primary btn-lg px-4 py-3">
                                    <i class="fas fa-tachometer-alt me-2"></i>
                                    <%= custom('hero_section.cta_dashboard_text', 'My Dashboard') %>
                                </a>
                            <% else %>
                                <a href="<%= custom('hero_section.cta_secondary_link', '/register') %>" class="btn btn-outline-success btn-lg px-4 py-3">
                                    <i class="<%= custom('hero_section.cta_secondary_icon', 'fas fa-user-plus') %> me-2"></i>
                                    <%= custom('hero_section.cta_secondary_text', 'Sign Up Free') %>
                                </a>
                            <% end %>
                        </div>

                        <!-- Trust Indicators -->
                        <% if custom('hero_section.show_trust_indicators', true) %>
                        <div class="row g-4 text-center">
                            <div class="col-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="<%= custom('hero_section.trust_indicator_1_icon', 'fas fa-shield-alt') %> text-success mb-2" style="font-size: 1.5rem;"></i>
                                    <small class="text-secondary fw-medium"><%= custom('hero_section.trust_indicator_1_text', 'Secure') %></small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="<%= custom('hero_section.trust_indicator_2_icon', 'fas fa-clock') %> text-success mb-2" style="font-size: 1.5rem;"></i>
                                    <small class="text-secondary fw-medium"><%= custom('hero_section.trust_indicator_2_text', 'Fast Setup') %></small>
                                </div>
                            </div>
                            <div class="col-4">
                                <div class="d-flex flex-column align-items-center">
                                    <i class="<%= custom('hero_section.trust_indicator_3_icon', 'fas fa-users') %> text-success mb-2" style="font-size: 1.5rem;"></i>
                                    <small class="text-secondary fw-medium"><%= custom('hero_section.trust_indicator_3_text', 'Expert Support') %></small>
                                </div>
                            </div>
                        </div>
                        <% end %>
                    </div>
                </div>

                <div class="col-lg-6">
                    <div class="hero-visual text-center position-relative">
                        <!-- Show SVG or Dashboard based on customization -->
                        <% if custom('hero_section.svg_enabled', true) %>
                            <%= erb :'partials/_hero_svg' %>
                        <% else %>
                            <!-- Generic Business Dashboard -->
                            <div class="card shadow-xl" style="max-width: 400px; margin: 0 auto; transform: rotate(-3deg);">
                                <div class="card-header text-center py-3">
                                    <h6 class="mb-0 fw-bold">
                                        <i class="fas fa-chart-line text-primary me-2"></i>
                                        <%= custom('hero_section.dashboard_title', 'Business Dashboard') %>
                                    </h6>
                                </div>
                                <div class="card-body">
                                    <div class="row text-center mb-3">
                                        <div class="col-4">
                                            <div class="fw-bold text-success fs-4"><%= custom('hero_section.stat_1_value', '98%') %></div>
                                            <small class="text-muted"><%= custom('hero_section.stat_1_label', 'Success Rate') %></small>
                                        </div>
                                        <div class="col-4">
                                            <div class="fw-bold text-primary fs-4"><%= custom('hero_section.stat_2_value', '24/7') %></div>
                                            <small class="text-muted"><%= custom('hero_section.stat_2_label', 'Support') %></small>
                                        </div>
                                        <div class="col-4">
                                            <div class="fw-bold text-warning fs-4"><%= custom('hero_section.stat_3_value', '10k+') %></div>
                                            <small class="text-muted"><%= custom('hero_section.stat_3_label', 'Customers') %></small>
                                        </div>
                                    </div>

                                    <!-- Progress bars -->
                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-muted"><%= custom('hero_section.progress_1_label', 'Performance') %></small>
                                            <small class="text-muted"><%= custom('hero_section.progress_1_value', '92%') %></small>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-success" style="width: 92%"></div>
                                        </div>
                                    </div>

                                    <div class="mb-3">
                                        <div class="d-flex justify-content-between align-items-center mb-1">
                                            <small class="text-muted"><%= custom('hero_section.progress_2_label', 'Growth') %></small>
                                            <small class="text-muted"><%= custom('hero_section.progress_2_value', '87%') %></small>
                                        </div>
                                        <div class="progress" style="height: 6px;">
                                            <div class="progress-bar bg-primary" style="width: 87%"></div>
                                        </div>
                                    </div>

                                    <div class="text-center mt-3">
                                        <span class="badge bg-success-subtle text-success px-3 py-2">
                                            <i class="fas fa-check-circle me-1"></i>
                                            <%= custom('hero_section.status_text', 'All Systems Operational') %>
                                        </span>
                                    </div>
                                </div>
                            </div>

                            <!-- Background Elements -->
                            <% if custom('hero_section.show_background_elements', true) %>
                            <div class="position-absolute top-0 start-0 w-100 h-100" style="z-index: -1;">
                                <div class="position-absolute" style="top: 20%; left: 10%; animation: float 6s ease-in-out infinite;">
                                    <i class="fas fa-star text-warning" style="font-size: 2rem; opacity: 0.3;"></i>
                                </div>
                                <div class="position-absolute" style="top: 60%; right: 20%; animation: float 8s ease-in-out infinite reverse;">
                                    <i class="fas fa-bolt text-primary" style="font-size: 1.5rem; opacity: 0.3;"></i>
                                </div>
                                <div class="position-absolute" style="bottom: 30%; left: 20%; animation: float 7s ease-in-out infinite;">
                                    <i class="fas fa-gem text-success" style="font-size: 1.8rem; opacity: 0.3;"></i>
                                </div>
                            </div>
                            <% end %>
                        <% end %>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<style>
@keyframes float {
    0%, 100% { transform: translateY(0px); }
    50% { transform: translateY(-20px); }
}

.min-vh-70 {
    min-height: 70vh;
}
</style>

