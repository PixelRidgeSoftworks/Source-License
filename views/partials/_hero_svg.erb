<!-- Customizable Hero SVG - Modern Business Dashboard -->
<div class="hero-svg-container" style="position: relative; width: 100%; max-width: 500px; margin: 0 auto;">
  <svg viewBox="0 0 400 300" xmlns="http://www.w3.org/2000/svg" style="width: 100%; height: auto;">
    <!-- Definitions for gradients and effects -->
    <defs>
      <!-- Gradient backgrounds -->
      <linearGradient id="cardGradient" x1="0%" y1="0%" x2="100%" y2="100%">
        <stop offset="0%" stop-color="<%= custom('hero_section.svg_document_color', '#ffffff') %>" stop-opacity="0.95" />
        <stop offset="100%" stop-color="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stop-opacity="0.98" />
      </linearGradient>

      <linearGradient id="headerGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" stop-opacity="0.1" />
        <stop offset="50%" stop-color="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" stop-opacity="0.15" />
        <stop offset="100%" stop-color="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" stop-opacity="0.1" />
      </linearGradient>

      <linearGradient id="progressGradient" x1="0%" y1="0%" x2="100%" y2="0%">
        <stop offset="0%" stop-color="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" />
        <stop offset="100%" stop-color="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" />
      </linearGradient>

      <!-- Shadow effect -->
      <filter id="shadow" x="-50%" y="-50%" width="200%" height="200%">
        <feDropShadow dx="2" dy="4" stdDeviation="3" flood-color="<%= custom('hero_section.svg_shadow_color', '#00000020') %>" />
      </filter>
    </defs>

    <!-- Background grid pattern -->
    <% if custom('hero_section.svg_show_floating_elements', true) %>
      <pattern id="grid" width="20" height="20" patternUnits="userSpaceOnUse">
        <path d="M 20 0 L 0 0 0 20" fill="none" stroke="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" stroke-width="0.5" opacity="0.1" />
      </pattern>
      <rect width="400" height="300" fill="url(#grid)" />
    <% end %>

    <!-- Main Business Dashboard -->
    <g transform="translate(30, 25)">
      <!-- Main container with modern styling -->
      <rect x="0" y="0" width="340" height="250" rx="16" ry="16"
            fill="url(#cardGradient)"
            stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>"
            stroke-width="1"
            filter="url(#shadow)" />

      <!-- Top bar with dots (like a modern app window) -->
      <rect x="0" y="0" width="340" height="30" rx="16" ry="16"
            fill="url(#headerGradient)" />
      <rect x="0" y="15" width="340" height="15"
            fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" />

      <!-- Window controls -->
      <circle cx="20" cy="15" r="4" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" opacity="0.8" />
      <circle cx="35" cy="15" r="4" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" opacity="0.8" />
      <circle cx="50" cy="15" r="4" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" opacity="0.8" />

      <!-- Title area -->
      <text x="70" y="19" fill="<%= custom('hero_section.svg_text_color', '#64748b') %>" font-family="system-ui, sans-serif" font-size="10" font-weight="600">
        <%= custom('hero_section.svg_title', 'Business Dashboard') %>
      </text>

      <!-- Status indicator -->
      <g transform="translate(300, 10)">
        <circle cx="0" cy="5" r="6" fill="<%= custom('hero_section.svg_status_color', '#10b981') %>" opacity="0.2" />
        <circle cx="0" cy="5" r="3" fill="<%= custom('hero_section.svg_status_color', '#10b981') %>" />
        <text x="12" y="9" fill="<%= custom('hero_section.svg_status_color', '#10b981') %>" font-family="system-ui, sans-serif" font-size="8">LIVE</text>
      </g>

      <!-- Dashboard content -->
      <g transform="translate(20, 45)">
        <!-- Key metrics cards -->
        <g transform="translate(0, 0)">
          <!-- Metric cards -->
          <rect x="0" y="0" width="90" height="50" rx="8" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />
          <rect x="100" y="0" width="90" height="50" rx="8" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />
          <rect x="200" y="0" width="90" height="50" rx="8" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />

          <!-- Metric content -->
          <text x="45" y="18" text-anchor="middle" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" font-family="system-ui, sans-serif" font-size="16" font-weight="bold">
            <%= custom('hero_section.svg_metric_1_value', '98.5%') %>
          </text>
          <text x="45" y="32" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_1_label', 'SUCCESS') %>
          </text>
          <text x="45" y="42" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_1_sublabel', 'RATE') %>
          </text>

          <text x="145" y="18" text-anchor="middle" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" font-family="system-ui, sans-serif" font-size="16" font-weight="bold">
            <%= custom('hero_section.svg_metric_2_value', '24/7') %>
          </text>
          <text x="145" y="32" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_2_label', 'UPTIME') %>
          </text>
          <text x="145" y="42" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_2_sublabel', 'SUPPORT') %>
          </text>

          <text x="245" y="18" text-anchor="middle" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" font-family="system-ui, sans-serif" font-size="16" font-weight="bold">
            <%= custom('hero_section.svg_metric_3_value', '10K+') %>
          </text>
          <text x="245" y="32" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_3_label', 'HAPPY') %>
          </text>
          <text x="245" y="42" text-anchor="middle" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_metric_3_sublabel', 'CUSTOMERS') %>
          </text>
        </g>

        <!-- Charts section -->
        <g transform="translate(0, 65)">
          <!-- Chart container -->
          <rect x="0" y="0" width="300" height="80" rx="8" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />

          <!-- Chart title -->
          <text x="15" y="18" fill="<%= custom('hero_section.svg_text_color', '#64748b') %>" font-family="system-ui, sans-serif" font-size="10" font-weight="600">
            <%= custom('hero_section.svg_chart_title', 'Performance Overview') %>
          </text>

          <!-- Mini bar chart -->
          <g transform="translate(20, 25)">
            <rect x="0" y="35" width="12" height="20" rx="2" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" opacity="0.7" />
            <rect x="20" y="25" width="12" height="30" rx="2" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" opacity="0.8" />
            <rect x="40" y="15" width="12" height="40" rx="2" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" opacity="0.9" />
            <rect x="60" y="30" width="12" height="25" rx="2" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" opacity="0.6" />
            <rect x="80" y="20" width="12" height="35" rx="2" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" opacity="0.8" />
            <rect x="100" y="10" width="12" height="45" rx="2" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" opacity="0.9" />
          </g>

          <!-- Progress indicators -->
          <g transform="translate(150, 35)">
            <!-- Progress 1 -->
            <text x="0" y="5" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
              <%= custom('hero_section.svg_progress_1_label', 'Growth') %>
            </text>
            <rect x="0" y="8" width="120" height="4" rx="2" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />
            <rect x="1" y="9" width="90" height="2" rx="1" fill="url(#progressGradient)" />

            <!-- Progress 2 -->
            <text x="0" y="25" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
              <%= custom('hero_section.svg_progress_2_label', 'Efficiency') %>
            </text>
            <rect x="0" y="28" width="120" height="4" rx="2" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />
            <rect x="1" y="29" width="105" height="2" rx="1" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" />
          </g>
        </g>

        <!-- Status bar -->
        <g transform="translate(0, 155)">
          <rect x="0" y="0" width="300" height="25" rx="6" fill="<%= custom('hero_section.svg_header_color', '#f8fafc') %>" stroke="<%= custom('hero_section.svg_border_color', '#e1e8ed') %>" />

          <!-- Status indicators -->
          <circle cx="15" cy="12" r="4" fill="<%= custom('hero_section.svg_status_color', '#10b981') %>" />
          <text x="25" y="16" fill="<%= custom('hero_section.svg_text_color', '#64748b') %>" font-family="system-ui, sans-serif" font-size="9">
            <%= custom('hero_section.svg_status_text', 'All systems operational') %>
          </text>

          <text x="250" y="16" fill="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" font-family="system-ui, sans-serif" font-size="8">
            <%= custom('hero_section.svg_timestamp', 'Live data') %>
          </text>
        </g>
      </g>
    </g>

    <!-- Floating business elements -->
    <% if custom('hero_section.svg_show_floating_elements', true) %>
      <!-- Growth arrow -->
      <g transform="translate(15, 80)" opacity="0.4">
        <path d="M0,20 L15,5 L12,8 L20,0 L22,2 L14,10 L17,7 L2,22 Z"
              fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" />
        <% if custom('hero_section.svg_enable_animations', true) %>
          <animateTransform attributeName="transform" type="translate" values="15,80; 20,75; 15,80" dur="3s" repeatCount="indefinite" />
        <% end %>
      </g>

      <!-- Analytics icon -->
      <g transform="translate(370, 60)" opacity="0.4">
        <circle cx="0" cy="0" r="8" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" opacity="0.2" />
        <path d="M-4,-4 L-2,-1 L2,-3 L4,1" stroke="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" stroke-width="2" fill="none" />
        <circle cx="-3" cy="-2" r="1" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" />
        <circle cx="3" cy="0" r="1" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" />
        <% if custom('hero_section.svg_enable_animations', true) %>
          <circle cx="0" cy="0" r="12" fill="none" stroke="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" stroke-width="1" opacity="0.3">
            <animate attributeName="r" values="12;16;12" dur="2s" repeatCount="indefinite" />
            <animate attributeName="opacity" values="0.3;0;0.3" dur="2s" repeatCount="indefinite" />
          </circle>
        <% end %>
      </g>

      <!-- Innovation lightbulb -->
      <g transform="translate(25, 50)" opacity="0.5">
        <circle cx="0" cy="-2" r="6" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" opacity="0.3" />
        <rect x="-2" y="2" width="4" height="4" rx="1" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" opacity="0.7" />
        <% if custom('hero_section.svg_enable_animations', true) %>
          <animateTransform attributeName="transform" type="rotate" values="0 25 50; 5 25 50; 0 25 50" dur="4s" repeatCount="indefinite" />
        <% end %>
      </g>

      <!-- Network nodes -->
      <g transform="translate(370, 200)" opacity="0.4">
        <circle cx="0" cy="0" r="3" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>" />
        <circle cx="12" cy="8" r="2" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>" />
        <circle cx="-8" cy="10" r="2" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>" />
        <line x1="0" y1="0" x2="12" y2="8" stroke="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" stroke-width="1" opacity="0.3" />
        <line x1="0" y1="0" x2="-8" y2="10" stroke="<%= custom('hero_section.svg_text_light_color', '#94a3b8') %>" stroke-width="1" opacity="0.3" />
        <% if custom('hero_section.svg_enable_animations', true) %>
          <animateTransform attributeName="transform" type="translate" values="370,200; 375,195; 370,200" dur="5s" repeatCount="indefinite" />
        <% end %>
      </g>
    <% end %>

    <!-- Animated particles -->
    <% if custom('hero_section.svg_enable_animations', true) %>
      <g class="particles" opacity="0.3">
        <circle cx="80" cy="40" r="1" fill="<%= custom('hero_section.svg_accent_color', '#3b82f6') %>">
          <animateTransform attributeName="transform" type="translate" values="0,0; 20,-10; 0,0" dur="6s" repeatCount="indefinite" />
          <animate attributeName="opacity" values="0.3;0.8;0.3" dur="6s" repeatCount="indefinite" />
        </circle>
        <circle cx="320" cy="80" r="1.5" fill="<%= custom('hero_section.svg_secondary_color', '#10b981') %>">
          <animateTransform attributeName="transform" type="translate" values="0,0; -15,15; 0,0" dur="8s" repeatCount="indefinite" />
          <animate attributeName="opacity" values="0.3;0.6;0.3" dur="8s" repeatCount="indefinite" />
        </circle>
        <circle cx="50" cy="250" r="1" fill="<%= custom('hero_section.svg_tertiary_color', '#f59e0b') %>">
          <animateTransform attributeName="transform" type="translate" values="0,0; 10,-20; 0,0" dur="7s" repeatCount="indefinite" />
          <animate attributeName="opacity" values="0.3;0.7;0.3" dur="7s" repeatCount="indefinite" />
        </circle>
      </g>
    <% end %>
  </svg>
</div>
