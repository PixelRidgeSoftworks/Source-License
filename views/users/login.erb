<div class="container my-5">
  <div class="row justify-content-center">
    <div class="col-md-6">
      <div class="card">
        <div class="card-header">
          <h4 class="mb-0">
            <i class="fas fa-sign-in-alt me-2 text-primary"></i>
            <%= custom_text('login_title', 'Sign In') %>
          </h4>
        </div>
        <div class="card-body p-4">
          <% if @error %>
            <div class="alert alert-danger">
              <i class="fas fa-exclamation-triangle me-2"></i>
              <%= h(@error) %>
            </div>
          <% end %>

          <form method="POST" action="/login">
            <div class="mb-3">
              <label for="email" class="form-label"><%= custom_text('login_email', 'Email Address') %></label>
              <input type="email"
                     class="form-control"
                     id="email"
                     name="email"
                     required
                     autofocus
                     autocomplete="email"
                     value="<%= h(params[:email] || '') %>">
            </div>

            <div class="mb-3">
              <label for="password" class="form-label"><%= custom_text('login_password', 'Password') %></label>
              <input type="password"
                     class="form-control"
                     id="password"
                     name="password"
                     required
                     autocomplete="current-password">
            </div>

            <div class="d-grid">
              <button type="submit" class="btn btn-primary btn-lg">
                <i class="fas fa-sign-in-alt me-2"></i>
                <%= custom_text('login_button', 'Sign In') %>
              </button>
            </div>
          </form>

          <hr class="my-4">

          <div class="row text-center">
            <div class="col-md-6">
              <a href="/register" class="btn btn-outline-success w-100">
                <i class="fas fa-user-plus me-2"></i>
                <%= custom_text('login_create_account', 'Create Account') %>
              </a>
            </div>
            <div class="col-md-6">
              <a href="/forgot-password" class="btn btn-outline-secondary w-100">
                <i class="fas fa-key me-2"></i>
                <%= custom_text('login_forgot_password', 'Forgot Password') %>
              </a>
            </div>
          </div>
        </div>
      </div>

      <div class="text-center mt-4">
        <div class="small text-muted">
          <p>
            <i class="fas fa-info-circle me-1"></i>
            <%= custom_text('login_transfer_note',
            'Don\'t have an account? Existing licenses will be automatically transferred when you create an account with the same email address.') %>
          </p>
          <p class="mt-2">
            <a href="/validate-license"><%= custom_text('login_validate_link', 'Just need to validate a license?') %></a>
          </p>
        </div>
      </div>
    </div>
  </div>
</div>
